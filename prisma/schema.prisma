generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Curso{
idCurso             Int @id @default(autoincrement())
nomeCurso           String
dataCurso           String
tempoInicio         DateTime @updatedAt
tempoFinalizacao    DateTime @updatedAt
palestrante         Palestrante @relation(fields: [palestranteId], references: [idPalestrante])
palestranteId       Int
participante        Int
tipoEvento          TipoEvento
descricaoCurso      String
observacao          String?
arrecadacao         Float?
}

enum TipoEvento {
FORMACAO
CURSO
HACKATHON

}

model Palestrante{
  idPalestrante           Int @id @default(autoincrement())
  eventos Curso[]
  nomePalestrante         String
  telefonePalestrante     String
  emailPalestrante        String
}